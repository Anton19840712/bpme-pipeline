{
  "Sink": {
    "Type": "log",
    "Pretty": true,
    "MaxItems": 50,
    "Level": "info",
    "Format": "json",
    "Output": "stdout",
    "LogJson": false
  },
  "EventPayload": {
    "Mode": "s3",
    "IncludeDataInEvent": false
  },
  "FileRetention": {
    "KeepRaw": true,
    "RawTtlDays": 30,
    "ParsedTtlDays": 30
  },
  "FtpDetection": {
    "Strategy": "polling",
    "TriggerMode": "Both",
    "PeriodInSeconds": 600,
    "SearchPath": "/",
    "Mask": "*.csv",
    "NotOlderThanSeconds": 86400,
    "StableForSeconds": 5,
    "StateStore": {
      "Type": "s3",
      "Bucket": "bpme-state",
      "Prefix": "process-1/"
    },
    "Deduplication": {
      "Mode": "emit"
    }
  },
  "FtpConnection": {
    "Host": "127.0.0.1",
    "Port": 21,
    "User": "admin",
    "Password": "admin",
    "UseSsl": false
  },
  "S3": {
    "Endpoint": "http://127.0.0.1:9000",
    "AccessKey": "minioadmin",
    "SecretKey": "minioadmin",
    "Bucket": "bpme",
    "UseSsl": false
  },
  "RabbitMq": {
    "Host": "127.0.0.1",
    "Port": 5672,
    "User": "user",
    "Password": "pass",
    "VirtualHost": "/",
    "Exchange": "bpme.events",
    "QueuePrefix": "bpme.pipeline"
  },
  "AdminApi": {
    "MaxUploadBytes": 150000000
  },
  "PipelineTopics": {
    "ScanTopic": "process-1.period.scan",
    "ParsingTopic": "process-1.period.scan.parsing",
    "TriggerTopic": "process-1.period"
  },
  "PipelineDefinition": {
    "FileNames": [
      "Processes/process-1.json",
      "Processes/process-2.json",
      "Processes/process-3.json"
    ]
  },
  "StoragePaths": {
    "RawPrefix": "raw/",
    "ParsedPrefix": "parsed/"
  },
  "FtpClient": {
    "EncryptionMode": "None",
    "ReadTimeoutMs": 30000,
    "InternetProtocol": "IPv4",
    "DataConnectionType": "PASV",
    "SocketKeepAlive": true,
    "ConnectTimeoutMs": 30000
  },
  "Logging": {
    "Directory": "..\\..\\Logs"
  }
}
